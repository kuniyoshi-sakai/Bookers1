<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
<h1>Editing book</h1>
<%= form_for(@book) do |f| %>

    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>body</h4>
    <%= f.text_area :body %>

    <p><%= f.submit 'Update Book' %></p>
    <p>
		<%= link_to "Show", book_path(@book) %> |
		<%= link_to "Back", books_path %>
    </p>
<% end %>